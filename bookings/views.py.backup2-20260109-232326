def my_bookings(request):
    """My bookings"""
    return render(request, 'customer/my_bookings.html')

def create_booking(request, property_id):
    """Create booking"""
    return render(request, 'customer/create_booking.html', {'property_id': property_id})

def has_role(user, role_name):
    """Check if user has role"""
    try:
        return user.userprofile.role == role_name
    except:
        return False

